# Configuration file for the Katzenschreck system
# Copy this file to config.txt and adjust the values

# RTSP Stream Configuration
rtsp_stream_url=rtsp://username:password@ip:port/path

# MQTT Broker Configuration  
mqtt_broker_url=<your-mqtt-broker.com>
mqtt_broker_port=1883
mqtt_topic=katzenschreck
mqtt_username=<your_mqtt_username>
mqtt_password=<your_mqtt_password>

# Object Detection Configuration
# Minimum confidence level (0.0-1.0) required for object detection to trigger an alert
confidence_threshold=0.5
# Disk usage threshold (0.0-1.0) - when exceeded, oldest images are automatically deleted
usage_threshold=0.8
# YOLO model to use (optional) - if not set, auto-detection based on hardware will be used
# Valid values: yolo11x.pt, yolo11l.pt, yolo11m.pt, yolo11s.pt, yolo11n.pt
# yolo_model=yolo11x.pt

# Ignore Zone (optional) - Coordinates as decimal values (0.0-1.0): x_min,y_min,x_max,y_max
# ignore_zone=0.1,0.1,0.3,0.3

# Database Configuration (MariaDB/MySQL)
db_host=<localhost>
db_user=<katzenschreck_app>
db_password=<123>
db_database=katzenschreck
camera_name=cam_teich

# Hardware Type Override (optional) - Use when automatic detection fails (e.g., in Docker containers)
# Valid values: jetson, raspberry_pi, generic
# hardware_type=jetson

# Monitoring Configuration (optional)
# Enable/disable the web-based monitoring interface
monitoring_enabled=true
# Port for the monitoring web interface (default: 8080)
monitoring_port=8080
# Maximum frames per second for the monitoring stream (default: 5.0)
monitoring_fps=5.0